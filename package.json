{
  "name": "repo-slice",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "repo-slice": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "build": "bun run clean && bun build src/cli.ts --outdir dist --target node --minify --sourcemap=external",
    "build:release": "bun run typecheck && bun run build",
    "dev": "bun run src/cli.ts",
    "test": "bun test"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^5.3.1",
    "tree-sitter": "^0.21.1",
    "tree-sitter-python": "^0.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/bun": "1.3.6"
  }
}
